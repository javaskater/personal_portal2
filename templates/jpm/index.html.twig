{% extends 'base.html.twig' %}
{% import 'jpm/localization.html.twig' as my_locale %}
{% block title %}{{ nom }}{% endblock %}
{% block stylesheets %}
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href={{ asset('font-awesome-4.7.0/css/font-awesome.min.css') }} rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
{% block navbar %}
<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('app_j_p_m') }}"><i
			class="fa fa-globe" aria-hidden="true"></i> jpmena </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
        {# obliged to force the locale https://stackoverflow.com/questions/15266673/forcing-the-twig-locale#}
          <a class="nav-link" aria-current="page" href="http://wiki.jpmena.eu/"><i class="fa fa-wikipedia-w"
						aria-hidden="true"></i> {{ 'menu.main.wiki'|trans({}, "messages", locale) }}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://blog.jpmena.eu/"><i class="fa fa-wordpress"
						aria-hidden="true"></i> {{ 'menu.main.blog'|trans({}, "messages", locale) }}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="https://github.com/javaskater"><i class="fa fa-github"
						aria-hidden="true"></i> {{ 'menu.main.github'|trans({}, "messages", locale) }}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="https://gitlab.com/jpmena"><i class="fa fa-gitlab"
						aria-hidden="true"></i> {{ 'menu.main.gitlab'|trans({}, "messages", locale) }}</a>
        </li>
      </ul>
      <a href="{{ path('setlocale', {'language': 'fr'}) }}"
				title="passer en franÃ§ais" data-toggle="tooltip"
				data-placement="left"><i class="fa fa-flag" aria-hidden="true"></i>
				fr |</a>&nbsp;</a>&nbsp; <a
				href="{{ path('setlocale', {'language': 'en'}) }}"
				title="switch to english" data-toggle="tooltip"
				data-placement="left"><i class="fa fa-flag" aria-hidden="true"></i>
				en |</a>&nbsp; <a href="{{ path('setlocale', {'language': 'de'}) }}"
				title="jetzt auf Deutsch" data-toggle="tooltip" data-placement="left"><i
				class="fa fa-flag" aria-hidden="true"></i> de</a>&nbsp;</a>
    </div>
  </div>
</nav>
{% endblock %}
{% block main %}
<div class="container-fluid">
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-8">{% include 'jpm/life_carousel.html.twig' with {'locale' : locale} only %}</div>
            <div class="col-sm-4">{{ my_locale.localized_include('short', locale, {}) }}</div>
        </div>
    </div>
</div>
<div class="container-fluid" id="short_resumee">
    <div class="container">
      {{ my_locale.localized_include('resume_tabs',locale,{}) }}
    </div>
</div>
{% endblock %}
{% block footer %}
<div class="container">
	{{ my_locale.localized_include('footer',locale,{}) }}
</div>
{% endblock %}
{% endblock %}
{% block javascripts_end %}
{{ asset('js/app.js') }}
{% endblock %}
